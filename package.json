{
  "name": "osureports_v2",
  "private": "true",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "docker:base": "node ./docker/mk-base-image.js ./docker/Dockerfile",
    "docker:buildbase": "docker build -f ./docker/Dockerfile -t ajmadsen/osureports:base .",
    "all-packages": "node ./bin/all-packages.js",
    "clean:pacakges": "yarn all-packages clean",
    "clean": "run-p clean:*",
    "build:packages": "yarn all-packages build",
    "build": "run-p build:*",
    "prebuild": "yarn clean",
    "watch:packages": "yarn all-packages dev",
    "watch:web": "yarn workspace @osureport/web dev",
    "watch": "run-p watch:*",
    "start": "run-s build watch"
  },
  "devDependencies": {
    "glob": "^7.1.6",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "docker:base"
  ]
}
