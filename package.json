{
  "name": "osureports_v2",
  "private": "true",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "docker:base": "node ./bin/mk-base-image.js ./docker/Dockerfile",
    "docker:buildbase": "docker build -f ./docker/Dockerfile -t ajmadsen/osureports:base .",
    "clean": "lerna run clean --stream",
    "build": "lerna run build --stream",
    "build:packages": "lerna run build --stream --ignore @osureport/service-*",
    "watch": "lerna run dev --parallel --stream",
    "start": "run-s build:packages watch",
    "lerna:prepare": "lerna run prepare --stream",
    "prepare": "run-s lerna:prepare build:packages"
  },
  "devDependencies": {
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.5.1",
    "@types/argparse": "^2.0.2",
    "argparse": "^2.0.1",
    "glob": "^7.1.6",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": []
}
